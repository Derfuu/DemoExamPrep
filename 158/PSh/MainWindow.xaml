<Window x:Class="PSh.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PSh"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800" Icon="/Приятный шелест.ico" Initialized="Window_Initialized" Closing="Window_Closing">

    <Grid x:Name="Main" ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"></RowDefinition>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid x:Name="Middle" ShowGridLines="True" Grid.Row="1" ScrollViewer.CanContentScroll="True">
            <Grid.RowDefinitions>
                <!--Data from dataVase-->
            </Grid.RowDefinitions>
            <ScrollViewer Grid.Row="1"/>
        </Grid>
        <Button Content="СДЕЛАЙ ЧТО-ТО!" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Width="124" Click="Button_Click"/>
    </Grid>

</Window>

    